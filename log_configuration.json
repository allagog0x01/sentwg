{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s -%(name)s - %(funcName)s- line_number %(lineno)s- %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "sentwg_logging.log",
            "encoding": "utf8",
            "maxBytes": 10485760,
            "backupCount": 20
        },
        "console": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "simple"

        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["file_handler", "console"]
    }

}